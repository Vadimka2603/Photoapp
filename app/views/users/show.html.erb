<% provide(:title, @user.name) %>
<% if current_user %>
  <div class="row">
    <aside class="col-md-4">
           <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  <% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
    <%= image_tag(@user.avatar_url) if @user.avatar? %><%= @user.name %>
      </h3>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Фотографии пользователя (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>